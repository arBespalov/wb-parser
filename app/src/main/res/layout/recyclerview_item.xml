<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.automotivecodelab.wbgoodstracker.domain.models.Item" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/card"
        android:transitionName="@{item.id}"
        style="?attr/materialCardViewFilledStyle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/relative_layout"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:padding="@dimen/default_margin"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:text="@{item.localName ?? item.name}"
                    tools:text="name"
                    android:textAppearance="@style/Subtitle"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/name"
                    android:id="@+id/price_container"

                    android:layout_marginTop="@dimen/default_margin">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_hint"
                        android:text="@string/price"
                        tools:text="Price:"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textAppearance="@style/Body"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:text="@{`` + item.averagePrice}"
                        tools:text="1990"
                        android:textAppearance="@style/Accent"
                        />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/average_price_delta"
                    android:text="@{item.averagePriceDelta ?? ``}"
                    tools:text="+1000"
                    android:textColor="@color/red"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_toRightOf="@id/price_container"
                    android:layout_below="@id/name"
                    android:textAppearance="@style/Accent"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/price_container"
                    android:id="@+id/orders_container"
                    android:layout_marginTop="@dimen/default_margin">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/orders_count_hint"
                        android:text="@string/orders_count"
                        tools:text="@string/orders_count"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textAppearance="@style/Body"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/orders_count"
                        android:text="@{`` + item.ordersCount}"
                        tools:text="20"
                        android:textAppearance="@style/Accent"
                        />
                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orders_count_delta"
                    android:text="@{item.ordersCountDelta ?? ``}"
                    tools:text="+50"
                    android:textColor="@color/red"
                    android:layout_below="@id/price_container"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_toRightOf="@id/orders_container"
                    android:textAppearance="@style/Accent"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/orders_container"
                    android:id="@+id/average_orders_count_per_day_container"
                    android:layout_marginTop="@dimen/default_margin">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/average_orders_count_per_day_hint"
                        android:text="@string/average_orders_count_per_day"
                        tools:text="@string/average_orders_count_per_day"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textAppearance="@style/Body"
                    />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/average_orders_count_per_day"
                        android:text="@{`` + item.averageOrdersCountPerDay}"
                        tools:text="1"
                        android:textAppearance="@style/Accent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/average_orders_count_per_day_container"
                    android:id="@+id/total_quantity_container"

                    android:layout_marginTop="@dimen/default_margin">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_quantity_hint"
                        android:text="@string/quantity_in_warehouse"
                        tools:text="@string/quantity_in_warehouse"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textAppearance="@style/Body"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_quantity"
                        android:text="@{`` + item.totalQuantity}"
                        tools:text="17"
                        android:textAppearance="@style/Accent"/>
                </LinearLayout>



                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_quantity_delta"
                    android:text="@{item.totalQuantityDelta ?? ``}"
                    tools:text="+5"
                    android:textColor="@color/red"
                    android:layout_below="@id/average_orders_count_per_day_container"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_toRightOf="@id/total_quantity_container"
                    android:textAppearance="@style/Accent"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/image_view"
                android:layout_weight="1"
                tools:src="@drawable/ic_baseline_add_24"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>