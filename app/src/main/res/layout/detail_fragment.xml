<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.automotivecodelab.wbgoodstracker.ExtensionsKt"/>
        <variable
            name="viewmodel"
            type="com.automotivecodelab.wbgoodstracker.ui.detailfrag.DetailViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/shared_element_container_detail_fragment">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar"
            app:liftOnScroll="false">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                style="?attr/collapsingToolbarLayoutLargeStyle"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:toolbarId="@+id/toolbar"
                app:contentScrim="?attr/colorPrimary"
                app:collapsedTitleTextColor="?attr/colorControlNormal"
                app:expandedTitleTextColor="?attr/colorControlNormal"
                app:titleCollapseMode="scale"
                app:maxLines="2"
                app:extraMultilineHeightEnabled="false">
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@drawable/scrim_top"
                    app:layout_collapseMode="pin"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/scrim_bottom"
                    app:layout_collapseMode="parallax"
                    />

                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="0dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/detail_fragment_menu" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/default_margin">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/error"
                        tools:text="@string/update_error"
                        android:textAppearance="@style/Accent"
                        android:textColor="@color/red"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="5"
                        android:columnCount="2">
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/orders_count"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/orders_count}"
                            bind:count="@{`` + viewmodel.item.ordersCount}"
                            bind:delta="@{ExtensionsKt.toStringWithSign(viewmodel.item.ordersCountDelta) ?? ``}"
                            android:clickable="true"
                            android:focusable="true" />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/orders_count_since_observing_started"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/orders_count_since_observing_started}"
                            bind:count="@{`` + viewmodel.item.ordersCountSinceObservingStarted}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/days_observing"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/days_observing}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/average_price"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/price}"
                            bind:count="@{`` + viewmodel.item.averagePrice}"
                            bind:delta="@{ExtensionsKt.toStringWithSign(viewmodel.item.averagePriceDelta) ?? ``}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/average_orders_count_per_day"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/average_orders_count_per_day}"
                            bind:count="@{`` + viewmodel.item.averageOrdersCountPerDay}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/estimated_income"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/estimated_income}"
                            bind:count="@{`` + viewmodel.item.estimatedIncome}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/total_quantity"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/quantity_in_warehouse}"
                            bind:count="@{`` + viewmodel.item.totalQuantity}"
                            bind:delta="@{ExtensionsKt.toStringWithSign(viewmodel.item.totalQuantityDelta) ?? ``}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/updating_time"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/updated}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/feedbacks"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/feedbacks}"
                            bind:count="@{`` + viewmodel.item.feedbacks}"
                            bind:delta="@{ExtensionsKt.toStringWithSign(viewmodel.item.feedbacksDelta) ?? ``}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/sku_id"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/sku_id}"
                            bind:count="@{`` + viewmodel.item.id}"
                            />
                    </GridLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sizes_layout"
                        android:orientation="vertical"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewmodel.item.url}"
                        android:autoLink="web"
                        android:layout_margin="@dimen/default_margin"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>