<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.automotivecodelab.wbgoodstracker.ui.detailfrag.DetailViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/shared_element_container_detail_fragment">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/appbar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax" />
                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/detail_fragment_menu" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/default_margin">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="2">
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/orders_count"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/orders_count}"
                            bind:count="@{`` + viewmodel.item.info[0].ordersCount}"
                            bind:delta="@{viewmodel.item.local_ordersCountDelta}"
                            android:clickable="true"
                            android:focusable="true" />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/orders_count_since_observing_started"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/orders_count_since_observing_started}"
                            bind:count="@{`` + viewmodel.item.ordersCountSinceObservingStarted}"
                            bind:delta="@{null}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/days_observing"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/days_observing}"
                            bind:delta="@{null}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/average_price"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/price}"
                            bind:count="@{`` + viewmodel.item.averagePrice}"
                            bind:delta="@{viewmodel.item.local_averagePriceDelta}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/average_orders_count_per_day"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/average_orders_count_per_day}"
                            bind:count="@{`` + viewmodel.item.averageOrdersCountInDay}"
                            bind:delta="@{null}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/estimated_income"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/estimated_income}"
                            bind:count="@{`` + viewmodel.item.estimatedIncome}"
                            bind:delta="@{null}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/total_quantity"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/quantity_in_warehouse}"
                            bind:count="@{`` + viewmodel.item.totalQuantity}"
                            bind:delta="@{viewmodel.item.local_totalQuantityDelta}"
                            />
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="@dimen/default_margin"
                            android:id="@+id/updating_time"
                            layout="@layout/card_info_layout"
                            bind:text="@{@string/updated}"
                            bind:delta="@{null}"
                            />
                    </GridLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sizes_layout"
                        android:orientation="vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewmodel.item.url}"
                        android:autoLink="web"
                        android:layout_margin="@dimen/default_margin"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>