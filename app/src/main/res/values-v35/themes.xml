<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WBParser" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/deep_purple</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorControlNormal">@color/text_color_selector</item>
        <item name="colorPrimaryContainer">@color/green</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="shapeAppearanceMediumComponent">
            @style/Widget.App.ShapeAppearanceMedium
        </item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
    </style>

        <style name="Theme.WBParser.SplashScreen" parent="Theme.SplashScreen">
                <item name="windowSplashScreenBackground">@color/deep_purple</item>
                <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
                <item name="postSplashScreenTheme">@style/Theme.WBParser</item>
                <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        </style>
</resources>