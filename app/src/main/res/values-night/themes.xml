<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.WBParser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="blackWhite">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.App.CollapsingToolbar</item>
<!--        <item name="android:spinnerItemStyle">@style/Widget.App.SpinnerItem</item>-->
        <item name="android:dropDownSpinnerStyle">@style/Widget.App.DropDownSpinner</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/Widget.App.TextAppearanceSmallPopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/Widget.App.TextAppearanceSmallPopupMenu</item>
        <item name="shapeAppearanceMediumComponent">@style/Widget.App.ShapeAppearanceMedium</item>
        <!--for changing icons color in action mode-->
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>
</resources>