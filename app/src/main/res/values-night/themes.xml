<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WBParser" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorSecondary">@color/green</item>
        <item name="colorControlNormal">@color/text_color_selector</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="colorPrimaryContainer">@color/green</item>
        <item name="colorOnPrimaryContainer">@android:color/black</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="shapeAppearanceMediumComponent">@style/Widget.App.ShapeAppearanceMedium</item>
        <item name="toolbarStyle">@style/Widget.App.DarkToolbar</item>
        <!--for changing icons color in action mode-->
        <item name="actionBarTheme">@style/ActionModeStyle</item>
    </style>

    <style name="Theme.WBParser.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.WBParser</item>
    </style>

</resources>