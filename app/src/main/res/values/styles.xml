<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="materialThemeOverlay">@style/ToolBarThemeOverlay</item>
    </style>

    <!--search view text color-->
    <style name="ToolBarThemeOverlay">
        <item name="android:editTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Accent" parent="TextAppearance.Material3.TitleSmall"/>

    <style name="Subtitle" parent="TextAppearance.Material3.TitleSmall"/>

    <style name="Big" parent="TextAppearance.Material3.DisplaySmall"/>

    <style name="Body" parent="TextAppearance.Material3.BodySmall"/>

    <style name="Widget.App.ShapeAppearanceMedium"
        parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ActionModeStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/text_color_selector</item>
    </style>

    <style name="SpinnerButton" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="materialThemeOverlay">@style/SpinnerButtonThemeOverlay</item>
    </style>

    <style name="SpinnerButtonThemeOverlay" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="colorOnContainer">?attr/colorControlNormal</item>
    </style>
</resources>